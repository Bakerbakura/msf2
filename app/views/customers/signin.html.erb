<div class="page-header">
	<h1>Login</h1>
</div>

<%= form_for :signin, html: {class: "form-horizontal", role: "form"} do |s| %>
	<div class="form-group row">
		<%= s.label :Email, "Email:", class: "col-xs-3 col-md-offset-2 col-md-2 control-label" %>
		<div class="col-xs-9 col-md-4">
			<%= s.email_field :Email, class: "form-control", placeholder: "enter email address here" %>
		</div>
	</div>
	<div class="form-group row">
		<%= s.label :password, "Password:", class: "col-xs-3 col-md-offset-2 col-md-2 control-label" %>
		<div class="col-xs-9 col-md-4">
			<%= s.password_field :password, class: "form-control", placeholder: "enter password here" %>
		</div>
	</div>
	
	<div class="form-actions row">
		<%= s.submit "Sign in", class: "btn btn-primary" %>
	</div>
<% end %>

<br><p>Don't have an account yet? <%= link_to "Sign up here", signup_path %></p>